<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ab_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/ab_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:background="@null"
        android:scaleType="fitStart" />

    <View
        android:id="@+id/ab_back_but_separator"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/ab_back_button"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_actionbar_separator" />
    
    <RelativeLayout
        android:id="@+id/ab_custom_view_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/ab_back_but_separator">
        
    </RelativeLayout>

    <View
        android:id="@+id/ab_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#777" />

</RelativeLayout>